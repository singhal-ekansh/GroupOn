<%= stylesheet_link_tag "login_form"%>
<div class="signup-form">
  <%= render partial: "shared/alert_message"%>
  <h2>Reset</h2>
  <p class="hint-text">Update your password for <%= @user.email %></p>

  <%= form_with(url: reset_passwords_url(token: @user.signed_id(purpose:
  "update_password"))) do |form|%>
  <div class="form-group">
    <%= form.password_field :password , class: "form-control", placeholder:
    "password", required: true %>
  </div>
  <div class="form-group">
    <%= form.password_field :password_confirmation , class: "form-control",
    placeholder: "confirm password", required: true %>
  </div>
  <center>
    <div class="form-group">
      <%= form.submit "reset password" , class: "btn btn-success btn-lg
      btn-block" %>
    </div>
  </center>
  <%end%>
</div>
