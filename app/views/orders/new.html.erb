<center><h1>Place Order</h1></center>
<%=form_with model: @order, url: deal_orders_path do |f| %>
  <%= render partial: "shared/error_messages", locals: {object: f.object} %>
  <div class="container">
    <div class="checkout-container">
      <div class="text-center text-dark">
        <%=image_tag @deal.images[0].file ,class: "product-image"%>
        <h3><%=@deal.title%></h3>
        <p>Price Per Deal: Rs <%=@deal.price%></p>
        <div class="form-group">
          <label for="quantity">Quantity:</label>
          <%= f.text_field :quantity %>
        </div>
        <br>
        <%= f.submit :checkout, class: "btn btn-primary btn-place-order"%>
      </div>
    </div>
  </div>
<%end%>
<%= stylesheet_link_tag 'checkout_order'%>