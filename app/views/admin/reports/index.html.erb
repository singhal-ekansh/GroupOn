<center>
<h1>Admin Reports</h1>
</center>
  <div class="container mt-4 text-dark">
    <div class="row">
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            Top Spending Customers
          </div>
          <div class="card-body">
            <% @top_customers&.each do |customer| %>
              <p><%= customer.first_name %>  <%= customer.last_name %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            Top Grossing Deals
          </div>
          <div class="card-body">
            <%= form_with url: admin_filter_deals_path do |form| %>
              <div class="row">
                <div class="form-group col">
                  <label for="start">Start Date:</label>
                  <%= form.date_field :start_at, class: 'form-control' ,required: true %>
                </div>
                <div class="form-group col">
                  <label for="end">End Date:</label>
                  <%= form.date_field :end_at, class: 'form-control',required: true %>
                </div>
              </div>
              <br>
              <%= form.button "filter", class: "btn btn-primary"%>
            <%end%>
            <hr>
            <% @top_deals&.each do |deal| %>
              <p><%= deal.title %></p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            Top Categories
          </div>
          <div class="card-body">
            <% @top_categories&.each do |category| %>
              <p><%= category.name %></p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
