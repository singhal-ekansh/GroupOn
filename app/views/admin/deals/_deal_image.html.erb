<li>
  <div class="row align-items-center">
    <div class="col-md-3">
      <div class="custom-file">
        <% if form.object.file.attached? %>
          <%= image_tag form.object.file, size: "150x150" %>
        <% else %>
          <%= form.file_field :file, class: "custom-file-input" %>
          <%= form.label :file, class: "custom-file-label" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-3">
      <%= form.hidden_field :_destroy %>
      <%= link_to 'Delete', '#', class: 'remove_record btn btn-danger', style: 'width: 80px; height: 40px;' %>
    </div>
  </div>
</li>
<br>