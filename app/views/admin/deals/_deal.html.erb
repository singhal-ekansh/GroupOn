<div class="card my-3 mx-3 bg-light shadow">
  <div class="row ">
    <% if !deal.deal_images.empty? && deal.deal_images[0].file.attached? %>
    <div class="col-md-2">
      <%= image_tag deal.deal_images[0].file, class: "card-img-left img-fluid", alt: "Deal Image" %>
    </div>
    <% end %>
    <div class="col-md-5">
      <div class="card-body text-dark">
        <h5 class="card-title"><%= deal.title %></h5>
        <p class="card-text"><%= deal.description %></p>
        <p class="card-text"><strong>Price: </strong>$<%= deal.price %></p>
        <p class="card-text"><strong>Available: </strong><%= deal.total_availaible %></p>
        <a href="<%= admin_deal_path(deal) %>" class="btn btn-primary">View Details</a>
      </div>
    </div>
  </div>
</div>