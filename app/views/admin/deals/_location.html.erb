      </div>
    </div>
     <div class="col-lg-3">
      <div class="form-group">
        <%= form.label :country %>
        <%= form.text_field :country, class: 'form-control' %>
      </div>
    </div>
    <div class="col-lg-3">
      <div class="form-group">
        <%= form.label :state %>
        <%= form.text_field :state, class: 'form-control' %>
