<div class="signup-form">
  <h2>Update Profile</h2>
  
  <%= form_with(model: current_user) do |form| %>
    <%= render partial: "shared/error_messages", locals: { object: form.object } %>
    <div class="form-group">
      <%= form.text_field :first_name, class: "form-control", placeholder: "First Name", required: true %>
    </div>
      
    <div class="form-group">
      <%= form.text_field :last_name, class: "form-control", placeholder: "Last Name", required: true %>
    </div>
    
    <%= form.fields_for :image do |img| %>
      <nav class='form_group'>
      <%= img.label 'new profile picture', class: "custom-file-label" %>
      <%= img.file_field :file, class: "custom-file-input" %>
      </nav>
      <br>
      <nav class='form_group'>
      <%= img.label 'remove profile picture', class: "custom-file-label" %>
      <%= img.check_box :_destroy, class: 'd-flex' %>
      </nav>
    <%end%>
    <br>
    <center>
      <div class="form-group">
        <%= form.submit :update, class: "btn btn-success btn-lg btn-block" %>
      </div>
    </center>
  <% end %>
</div>