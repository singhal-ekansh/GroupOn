<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-8">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <%= image_tag "https://pdtxar.com/wp-content/uploads/2019/04/person-placeholder.jpg", class: "img-fluid img-thumbnail mt-4 mb-2",
                style: "width: 150px; z-index: 1" %>
              <%= link_to "Edit Profile", edit_user_path(current_user), class: "btn btn-outline-dark", style: "z-index: 1;", 'data-mdb-ripple-color': "dark" %>
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5><%="#{current_user.first_name} #{current_user.last_name}"%></h5>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5"> <%=@orders_count%> </p>
                <p class="small text-muted mb-0">Orders</p>
              </div>
              <div class="px-3">
                <p class="mb-1 h5"> <%=@coupons_count%> </p>
                <p class="small text-muted mb-0">Coupons</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-4">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1"><%= current_user.email %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>